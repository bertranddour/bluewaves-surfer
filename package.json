{
  "name": "@bluewaves/surfer",
  "version": "1.0.0",
  "description": "üèÑ‚Äç‚ôÇÔ∏è S-tier design system for Next.js + shadcn/ui",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "surfer": "bin/surfer.js"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit --project tsconfig.build.json",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "storybook": "storybook dev -p 6006",
    "build-storybook": "storybook build",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run test && pnpm run typecheck",
    "release": "pnpm run prepublishOnly && npm publish"
  },
  "files": [
    "dist",
    "bin",
    "templates",
    "components",
    "styles",
    "README.md",
    "CHANGELOG.md"
  ],
  "keywords": [
    "design-system",
    "nextjs",
    "shadcn-ui",
    "tailwind",
    "react",
    "typescript",
    "ui-components",
    "bluewaves"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./tokens": {
      "types": "./dist/tokens/index.d.ts",
      "import": "./dist/tokens/index.js",
      "require": "./dist/tokens/index.cjs",
      "default": "./dist/tokens/index.js"
    },
    "./css": "./dist/styles/globals.css",
    "./tailwind": {
      "types": "./dist/tailwind.config.d.ts",
      "import": "./dist/tailwind.config.js",
      "require": "./dist/tailwind.config.cjs",
      "default": "./dist/tailwind.config.js"
    },
    "./package.json": "./package.json"
  },
