{
  "name": "bluewaves",
  "version": "1.2.0",
  "description": "ðŸŒŠ Unified CLI for Bluewaves ecosystem - Next.js + Surfer design system + shadcn/ui",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "bin": {
    "bluewaves": "bin/bluewaves.cjs"
  },
  "scripts": {
    "build": "tsup",
    "dev": "tsup --watch",
    "test": "vitest run",
    "test:watch": "vitest",
    "test:ui": "vitest --ui",
    "test:coverage": "vitest run --coverage",
    "typecheck": "tsc --noEmit --project tsconfig.build.json",
    "lint": "eslint . --ext .ts,.tsx",
    "lint:fix": "eslint . --ext .ts,.tsx --fix",
    "format": "prettier --write .",
    "format:check": "prettier --check .",
    "clean": "rimraf dist",
    "prepublishOnly": "pnpm run clean && pnpm run build && pnpm run typecheck",
    "release": "pnpm run prepublishOnly && npm publish"
  },
  "files": [
    "dist",
    "bin",
    "README.md",
    "CHANGELOG.md",
    "DESIGN_PRINCIPLES.md"
  ],
  "keywords": [
    "design-system",
    "nextjs",
    "shadcn-ui",
    "tailwind",
    "react",
    "typescript",
    "ui-components",
    "bluewaves"
  ],
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs",
      "default": "./dist/index.js"
    },
    "./css": "./dist/styles/globals.css",
    "./package.json": "./package.json"
  },
  "peerDependencies": {
    "next": "^14.0.0 || ^15.0.0",
    "react": "^18.0.0 || ^19.0.0",
    "react-dom": "^18.0.0 || ^19.0.0",
    "tailwindcss": "^4.1.0"
  },
  "peerDependenciesMeta": {
    "next": {
      "optional": false
    },
    "tailwindcss": {
      "optional": false
    }
  },
  "dependencies": {
    "chalk": "^5.3.0",
    "clsx": "^2.1.1",
    "commander": "^12.0.0",
    "detect-package-manager": "^3.0.0",
    "execa": "^8.0.0",
    "fs-extra": "^11.2.0",
    "inquirer": "^10.0.0",
    "ora": "^8.0.0",
    "semver": "^7.6.0",
    "tailwind-merge": "^3.3.1",
    "validate-npm-package-name": "^5.0.0",
    "which": "^4.0.0"
  },
  "devDependencies": {
    "@eslint/js": "^9.31.0",
    "@testing-library/jest-dom": "^6.6.3",
    "@types/fs-extra": "^11.0.4",
    "@types/inquirer": "^9.0.7",
    "@types/node": "^24.0.0",
    "@types/semver": "^7.5.0",
    "@types/validate-npm-package-name": "^4.0.0",
    "@types/which": "^3.0.0",
    "@typescript-eslint/eslint-plugin": "^8.0.0",
    "@typescript-eslint/parser": "^8.0.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@vitest/ui": "^3.0.0",
    "eslint": "^9.0.0",
    "prettier": "^3.0.0",
    "rimraf": "^5.0.0",
    "tsup": "^8.0.0",
    "typescript": "^5.8.0",
    "vitest": "^3.0.0"
  },
  "publishConfig": {
    "access": "public"
  },
  "repository": {
    "type": "git",
    "url": "https://github.com/bluewaves/surfer"
  },
